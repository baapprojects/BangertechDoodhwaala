<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <ImageView
        android:id="@+id/imageViewProduct"
        android:layout_width="@dimen/image_width_in_list"
        android:layout_height="@dimen/image_height_in_list"
        android:src="@drawable/nandini"
        />

    <TextView
        android:id="@+id/textViewProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nandini Skimmed Milk"
        android:gravity="center_horizontal"
        android:textColor="@color/grey_product_name_color"
        />
    <TextView
        android:id="@+id/textViewProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10.00"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/grey_product_amount_color"/>

</LinearLayout>



<!--</android.support.v7.widget.CardView>-->
</LinearLayout>